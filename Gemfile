source 'https://rubygems.org'
ruby '2.0.0'

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.0.3'
gem 'devise'
gem 'bootstrap-sass'
gem 'slim-rails'

group :development, :test do
  gem 'rspec-rails'
  gem 'spork-rails'
  gem 'ripper-tags'
  gem 'launchy'
  gem 'pry-rails'
  gem 'spinach-rails'
end

group :test do
  gem 'selenium-webdriver'
  gem 'capybara'
  gem 'database_cleaner'
  gem 'mocha'
end

gem 'pg'
gem 'sass-rails', '~> 4.0.0'
gem 'uglifier', '>= 1.3.0'
gem 'coffee-rails', '~> 4.0.0'
gem 'jquery-rails'
gem 'turbolinks' # Turbolinks: Read more: https://github.com/rails/turbolinks
gem 'jbuilder', '~> 1.2'

group :production do
  gem 'rails_12factor'
end
